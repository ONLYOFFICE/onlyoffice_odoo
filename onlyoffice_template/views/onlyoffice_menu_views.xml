<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_onlyoffice_template_form" model="ir.ui.view">
            <field name="name">onlyoffice.template.form</field>
            <field name="model">onlyoffice.template</field>
            <field name="arch" type="xml">
                <form string="ONLYOFFICE Template">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="file" filename="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_onlyoffice_template_kanban" model="ir.ui.view">
            <field name="name">onlyoffice.template.kanban</field>
            <field name="model">onlyoffice.template</field>
            <field name="arch" type="xml">
                <kanban js_class="custom_kanban">
                    <field name="id"/>
                    <field name="attachment_id"/>
                    <field name="mimetype"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_onlyoffice_template">
                <field name="name">ONLYOFFICE</field>
                <field name="res_model">onlyoffice.template</field>
                <field name="view_mode">kanban,form</field>
        </record>

        <menuitem 
            id="onlyoffice_template_menu" 
            name="ONLYOFFICE Template" 
            web_icon="onlyoffice_template,static/description/icon.png"
            sequence="30"
        />
        <menuitem 
            id="onlyoffice_template_submenu" 
            name="ONLYOFFICE Template" 
            parent="onlyoffice_template_menu" 
            action="action_onlyoffice_template"
        />
    </data>
</odoo>