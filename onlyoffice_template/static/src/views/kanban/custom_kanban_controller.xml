<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="onlyoffice_template.CustomKanbanController" t-inherit="web.KanbanView" owl="1">
        <xpath expr="//Layout" position="after">
            <div class="editor" t-att-style="!state.showEditor ? 'display: none;' : null">
                <ul class="fields_list">
                    <t t-foreach="state.fields" t-as="field" t-key="field.key">
                        <li t-on-click="(event) => this.onFieldElementClick(event, field)" class="field">
                            Model: <t t-esc="field.model"/><br/>
                            Name: <t t-esc="field.name"/><br/>
                            String: <t t-esc="field.string"/><br/>
                            Type: <t t-esc="field.type"/>
                        </li>
                    </t>
                </ul>
                <div class="iframe"/>
            </div>
        </xpath>
    </t>

    <t t-name="onlyoffice_template.CustomKanbanController.Buttons" t-inherit="web.KanbanView.Buttons" t-inherit-mode="primary" owl="1">
        <xpath expr="//button[hasclass('o-kanban-button-new')]" position="replace">
            <button type="button" class="btn btn-primary o-kanban-button-new-template" t-on-click="() => this.onButtonCreateTemplateClick()">
                Create template
            </button>
        </xpath>
    </t>
</templates>