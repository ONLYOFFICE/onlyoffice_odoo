<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="onlyoffice_template.CustomKanbanRecord" t-inherit="web.KanbanRecord">
        <xpath expr="//div[@t-ref='root']" position="inside">
            <div class="oe_kanban_global_area o_kanban_attachment">
                <div class="row">
                    <div class="offset-10">
                        <div class="o_dropdown_kanban o_onlyoffice_dropdown_kanban dropdown"> <!-- groups="base.group_user" -->
                            <a role="button" class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu" aria-expanded="false">
                                <span class="fa fa-ellipsis-v"/>
                            </a>
                            <div class="dropdown-menu" role="menu">
                                <a role="menuitem" class="dropdown-item" t-on-click="_editTemplate">Edit</a>
                                <a role="menuitem" class="dropdown-item" t-attf-href="/web/content/ir.attachment/#{props.record.data.attachment_id[0]}/datas?download=true">Download</a>
                                <a role="menuitem" class="dropdown-item" t-on-click="_deleteTemplate">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="o_kanban_image">
                    <div class="o_kanban_image_wrapper">
                        <div class="o_image o_image_thumbnail" t-att-data-mimetype="props.record.data.mimetype">
                        </div>
                    </div>
                </div>

                <div class="o_kanban_details">
                    <div class="o_kanban_details_wrapper">
                        <div class="o_kanban_record_title" t-att-title="props.record.data.name">
                            <span class="o_text_overflow" t-esc="props.record.data.name"/>
                        </div>

                        <div class="o_kanban_record_body">
                            <samp class="text-muted"> </samp>
                        </div>

                        <div class="o_kanban_record_bottom">
                            <time class="oe_kanban_bottom_left">
                                <div name="create_date" class="o_field_widget o_readonly_modifier o_field_date">
                                    <span t-esc="getCreateDate()"/>
                                </div>
                            </time>
                            <div class="oe_kanban_bottom_right">
                                <div name="create_uid" class="o_field_widget o_readonly_modifier o_field_many2one_avatar_user o_field_many2one_avatar">
                                    <div class="d-flex" t-att-data-tooltip="props.record.data.create_uid[1]">
                                        <span class="o_m2o_avatar">
                                            <img t-att-src="'/web/image/res.users/' + props.record.data.create_uid[0] + '/avatar_128'"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>
